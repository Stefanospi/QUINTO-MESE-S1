@model PROGETTO_G5.Models.Verbale

@{
    ViewData["Title"] = "CreateVerbali";
}

<h1 class="text-light fst-italic">Inserisci il verbale</h1>

<h4 class="text-light fst-italic">Verbale</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateVerbali" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DataViolazione" class="control-label text-light">Data Violazione</label>
                <input asp-for="DataViolazione" class="form-control" />
                <span asp-validation-for="DataViolazione" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IndirizzoViolazione" class="control-label text-light">Indirizzo Violazione</label>
                <input asp-for="IndirizzoViolazione" class="form-control" />
                <span asp-validation-for="IndirizzoViolazione" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NominativoAgente" class="control-label text-light">Nominativo Agente</label>
                <input asp-for="NominativoAgente" class="form-control" />
                <span asp-validation-for="NominativoAgente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataTrascrizioneVerbale" class="control-label text-light">Data Trascrizione Verbale</label>
                <input asp-for="DataTrascrizioneVerbale" class="form-control" />
                <span asp-validation-for="DataTrascrizioneVerbale" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Importo" class="control-label text-light"></label>
                <input asp-for="Importo" class="form-control" />
                <span asp-validation-for="Importo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DecurtamentoPunti" class="control-label text-light">Punti Decurtati</label>
                <input asp-for="DecurtamentoPunti" class="form-control" />
                <span asp-validation-for="DecurtamentoPunti" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdAnagrafica" class="control-label text-light">Identificativo Trasgressore</label>
                <input asp-for="IdAnagrafica" class="form-control" />
                <span asp-validation-for="IdAnagrafica" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdTipoViolazione" class="control-label text-light">Identificativo Violazione</label>
                <input asp-for="IdTipoViolazione" class="form-control" />
                <span asp-validation-for="IdTipoViolazione" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Create" class="btn btn-personal" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a class="text-decoration-none btn btn-personal2" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
