@model IEnumerable<PROGETTO_G5.Models.VerbaleConTrasgressore>

@{
    ViewData["Title"] = "Verbale con trasgressori";
}

<h1 class="text-light fst-italic">Verbali con trasgressore</h1>

<table class="table">
    <thead>
        <tr>
            <th class="text-light">Identificativo Trasgressore</th>
            <th class="text-light">Cognome</th>
            <th class="text-light">Nome</th>
            <th class="text-light">Totale Verbali</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var violazione in Model)
        {
            <tr>
                <td class="text-light">@violazione.IdAnagrafica</td>
                <td class="text-light">@violazione.Cognome</td>
                <td class="text-light">@violazione.Nome</td>
                <td class="text-light">@violazione.TotaleVerbali</td>
            </tr>
        }
    </tbody>
</table>